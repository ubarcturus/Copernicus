@page
@using Copernicus_Weather.Models.Data
@model Copernicus_Weather.Pages.WeatherReportModel

@{
    ViewData[index: "Title"] = "WeatherReport";
}

<div class="text-center">
    <h1 class="display-4">Weather report</h1>
</div>

@* <iframe src='https://mars.nasa.gov/layout/embed/image/insightweather/' width='100%' height='700' scrolling='no'
    frameborder='0'></iframe> *@

<table class="table table-striped">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(expression: weatherReport => weatherReport.Days[0].DayOfTheYear)</th>
        <th>@Html.DisplayNameFor(expression: weatherReport => weatherReport.Days[0].FirstUtc)</th>
        <th>Average @Html.DisplayNameFor(expression: weatherReport => weatherReport.Days[0].AtmosphericTemperature)</th>
        <th>Average @Html.DisplayNameFor(expression: weatherReport => weatherReport.Days[0].HorizontalWindSpeed)</th>
        <th>@Html.DisplayNameFor(expression: weatherReport => weatherReport.Days[0].Season)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Sol sol in Model.Days)
    {
        <tr>
            <td>Sol @(sol.DayOfTheYear)</td>
            <td>@(sol.FirstUtc.ToShortDateString())</td>
            <td>@(sol.AtmosphericTemperature.Average) °C</td>
            <td>@(sol.HorizontalWindSpeed.Average) m/s</td>
            <td>@(sol.Season)</td>
        </tr>
    }
    </tbody>
</table>