@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    body {
        background-image: url(@Model.PictureUrl);
        background-position: center;
        background-size: cover;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<button class="btn btn-primary addToFavorites" type="submit">Add to favorites</button>

@Html.AntiForgeryToken()

<script>
    document.querySelector('.addToFavorites').addEventListener('click', addToFavorites);
    async function addToFavorites() {
        const url = '/?handler=addToFavorites';
        const response = await fetch(url, {
            method: 'POST',
            headers: {
                'RequestVerificationToken': document.querySelector(
                    'input[name="__RequestVerificationToken"]').value
            }
        });
        console.log(response.json());
    }
</script>

